# Set the default behavior, in case people don't have core.autocrlf set.
* text=auto

# force LF line endings
*.c      text eol=lf
*.cc     text eol=lf
*.cpp    text eol=lf
*.h      text eol=lf
*.hpp    text eol=lf
*.txt    text eol=lf
*.cmake.in     text eol=lf
*.md     text eol=lf
*.yml    text eol=lf
*.yaml   text eol=lf
*.sh     text eol=lf
*.sln text eol=lf
*.infile text eol=lf
*.py text eol=lf
*.json text eol=lf

# force CRLF line endings
*.bat text eol=crlf
*.cmd text eol=crlf
*.ps text eol=crlf
*.ps1 text eol=crlf

# Denote all files that are truly binary and should not be modified.
*.png binary
*.jpg binary
*.bin binary